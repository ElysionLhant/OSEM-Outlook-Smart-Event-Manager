<UserControl
        xmlns:p="clr-namespace:OSEMAddIn.Properties" x:Class="OSEMAddIn.Views.Shell.ShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OSEMAddIn.ViewModels"
             xmlns:em="clr-namespace:OSEMAddIn.Views.EventManager"
             xmlns:ed="clr-namespace:OSEMAddIn.Views.EventDetail"
             mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DataTemplate DataType="{x:Type vm:EventManagerViewModel}">
            <em:EventManagerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EventDetailViewModel}">
            <ed:EventDetailView />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Border Background="White" Padding="4">
            <ContentPresenter Content="{Binding CurrentViewModel}" />
        </Border>
        
        <!-- Busy Overlay -->
        <Grid Background="#80808080" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
              d:Visibility="Visible">
            <Border Background="White" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Padding="20" 
                    CornerRadius="4"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="â³" 
                               FontSize="24" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding BusyMessage}" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{x:Static p:Resources.Outlook_is_busy_processing_items}" 
                               FontSize="12" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                    <Button Command="{Binding ForceActivateCommand}"
                            Content="{x:Static p:Resources.Force_Activate}"
                            Margin="0,15,0,0"
                            Padding="10,5"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Foreground="Gray"
                            FontSize="11"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        CornerRadius="2">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F0F0F0"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
